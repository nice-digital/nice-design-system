{% macro tag(tag) %}
	{% set modifier %}
		{% if tag.modifier %}
			tag--{{ tag.modifier }}
		{% else %}
			{% for modifier in tag.modifiers %} tag--{{ modifier }}{% endfor %}
		{% endif %}
	{% endset %}

	{% set tagName %}{{ "a" if tag.href else "span" }}{% endset %}

	{% set href %}{% if tag.href %}href="{{tag.href}}"{% endif %}{% endset %}

	<{{ tagName }} class="tag {{ modifier | trim }} {{ tag.className if tag.className }}" {{ href }}>
		{{ tag.label }}
		{% if tag.remove %}
			{% if tag.remove == "button" %}
				<button type="button" class="tag__remove">
					<span class="icon icon--remove" aria-hidden="true"></span>
					<span class="visually-hidden">Remove {{ tag.label }}</span>
				</button>
			{% else %}
				<a href="{{tag.remove}}" class="tag__remove">
					<span class="icon icon--remove" aria-hidden="true"></span>
					<span class="visually-hidden">Remove {{ tag.label }}</span>
				</a>
			{% endif %}
		{% endif %}
	</{{ tagName }}>
{% endmacro %}

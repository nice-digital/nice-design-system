{
	"editor.formatOnSave": true,
	"editor.rulers": [80],
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.endOfLine": "lf",
	"files.eol": "\n",
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"files.exclude": {
		"packages/*/es": true,
		"packages/*/lib": true,
		"packages/*/dist": true,
		".cache": true,
		".nyc_output": true,
		"coverage": true,
		"dist": true,
		"temp": true
	},
	"workbench.colorCustomizations": {
		"activityBar.background": "#427e83",
		"titleBar.activeBackground": "#427e83",
		"titleBar.activeForeground": "#E4DCBB"
	}
}

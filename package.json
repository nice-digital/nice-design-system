{
  "name": "nice-design-system",
  "private": true,
  "version": "0.0.1",
  "description": "Monorepo for the NICE Design System",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run build:es:watch\" \"lerna run --scope=dev-app start\"",
    "// STORYBOOK": "",
    "storybook": "lerna run --stream --scope=storybook storybook",
    "storybook:build": "lerna run --scope=storybook build-storybook",
    "// LERNA": "",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap --hoist",
    "release": "lerna publish",
    "// TESTS": "",
    "test": "cross-env CI=true npm run test:unit && npm run lint",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "// LINTING": "",
    "lint": "npm run prettier && npm run lint:js && npm run lint:scss",
    "lint:js": "eslint ./packages/*/src/**/*.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:scss": "stylelint packages/**/*.scss",
    "lint:scss:fix": "npm run lint:scss -- --fix",
    "prettier": "prettier --check packages/*/{src,scss,__{tests,mocks}__}/**/*.{scss,js,json}",
    "// TRANSIPLE ES6": "",
    "prebuild:lib": "lerna exec rimraf lib",
    "build:lib": "lerna exec --scope=@nice-digital/nds-* --parallel -- babel src -d lib --source-maps --root-mode upward",
    "build:lib:watch": "npm run build:lib -- -w",
    "prebuild:es": "lerna exec rimraf es",
    "build:es": "cross-env NODE_ENV=es lerna exec --scope=@nice-digital/nds-* --parallel -- babel src -d es --source-maps --root-mode upward",
    "build:es:watch": "npm run build:es -- -w",
    "build:watch": "concurrently -n build: npm:build:*:watch",
    "// LIFECYCLE": "",
    "postinstall": "npm run bootstrap",
    "prepublishOnly": "npm run build:lib && npm run build:es"
  },
  "config": {
    "//": "Banner is used for prepending to compiled JS and CSS",
    "banner": "NICE Design System ${ version } | ${ date }\nÂ© Copyright NICE 2015-${ year }\nLicensed under MIT (https://github.com/nhsevidence/nice-design-system/blob/master/LICENSE)"
  },
  "author": "Ian Routledge <ian.routledge@nice.org.uk>",
  "contributors": [
    "NICE Digital Services (https://www.nice.org.uk/digital)",
    "Ian Routledge (http://ediblecode.com)"
  ],
  "license": "MIT",
  "engines": {
    "node": ">= 8.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "@nice-digital/eslint-config": "^1.0.1",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.8.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.1",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.1.1",
    "stylelint-scss": "^3.9.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@nice-digital/icons": "^2.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
